{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "typeRoots": ["types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/scripts/*.ts"]
}
